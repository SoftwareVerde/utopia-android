<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:clickable="false"
            android:focusable="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1"
                android:id="@+id/deployed_army_generals"
                android:singleLine="true"
                android:maxLines="1"
                android:minLines="1"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:clickable="false"
                android:focusable="false"
                android:lines="1"
                android:textIsSelectable="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="general deployed"
                android:id="@+id/deployed_army_generals_label"
                android:singleLine="true"
                android:maxLines="1"
                android:minLines="1"
                android:textSize="15dp"
                android:textStyle="bold"
                android:clickable="false"
                android:focusable="false"
                android:lines="1"
                android:textIsSelectable="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="false"
            android:focusable="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="100"
                android:id="@+id/deployed_army_acres"
                android:minLines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="15dp"
                android:clickable="false"
                android:focusable="false"
                android:lines="1"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="acres"
                android:id="@+id/deployed_army_acres_label"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:minLines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="15dp"
                android:clickable="false"
                android:focusable="false"
                android:lines="1"
                android:textIsSelectable="false" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false">

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:id="@+id/deployed_army_progress_bar"
            android:max="57600"
            android:progress="0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.60"
            android:progressDrawable="@drawable/progress_color"
            android:clickable="false"
            android:focusable="false" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="12h 59m"
            android:id="@+id/deployed_army_return_time"
            android:singleLine="true"
            android:maxLines="1"
            android:minLines="1"
            android:layout_weight="0.40"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="25dp"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:clickable="false"
            android:focusable="false"
            android:lines="1" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#101010"
        android:clickable="false"
        android:focusable="false">
    </View>
</LinearLayout>