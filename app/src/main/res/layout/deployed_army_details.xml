<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Deployed Army"
        android:id="@+id/deployed_army_details_title"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#EEEEEE"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Returns in:"
                android:id="@+id/deployed_army_details_return_time_label"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="#ABCDEF"
                android:textIsSelectable="false"
                android:layout_gravity="center"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12h 59m"
                android:id="@+id/deployed_army_details_return_time_value"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="#ABCDEF"
                android:textIsSelectable="false"
                android:layout_gravity="center"
                android:textStyle="bold"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:padding="0dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125"
                android:id="@+id/deployed_army_details_acres_value"
                android:layout_marginRight="5dp"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textIsSelectable="false"
                android:layout_gravity="center"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="acres"
                android:id="@+id/deployed_army_details_acres_label"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textIsSelectable="false"
                android:layout_gravity="center"
                android:textStyle="bold"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Generals: "
            android:id="@+id/deployed_army_details_generals_label"
            android:textSize="14dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:singleLine="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/deployed_army_details_generals_value"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:singleLine="true"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left" >

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Soldiers: "
            android:id="@+id/deployed_army_details_soldiers_label"
            android:textSize="14dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:singleLine="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:id="@+id/deployed_army_details_soldiers_value"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:singleLine="true"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left" >

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Offensive Units: "
            android:id="@+id/deployed_army_details_offensive_units_label"
            android:textSize="14dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:singleLine="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:id="@+id/deployed_army_details_offensive_units_value"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:singleLine="true"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left" >

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Elites: "
            android:id="@+id/deployed_army_details_elites_label"
            android:textSize="14dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:singleLine="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:id="@+id/deployed_army_details_elites_value"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:singleLine="true"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left" >

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Horses: "
            android:id="@+id/deployed_army_details_horses_label"
            android:textSize="14dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:singleLine="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:id="@+id/deployed_army_details_horses_value"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:singleLine="true"
            android:gravity="right"
            />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="25dp" >
    </View>
</LinearLayout>