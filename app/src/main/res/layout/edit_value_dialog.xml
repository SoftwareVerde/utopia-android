<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Title Text"
        android:id="@+id/edit_value_title"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#EEEEEE"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Content"
        android:id="@+id/edit_value_content"
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:textColor="#ABCDEF"
        android:textIsSelectable="false"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current: "
            android:id="@+id/edit_value_current_value_label"
            android:textSize="14dp"
            android:layout_marginRight="15dp"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:singleLine="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,000"
            android:id="@+id/edit_value_current_value"
            android:textStyle="bold"
            android:textSize="14dp"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:singleLine="true"
            android:gravity="right"
            android:minWidth="65dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Progress: "
            android:id="@+id/edit_value_in_progress_label"
            android:textSize="14dp"
            android:layout_marginRight="15dp"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,000"
            android:id="@+id/edit_value_in_progress_value"
            android:textStyle="bold"
            android:textSize="14dp"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:singleLine="true"
            android:gravity="right"
            android:minWidth="65dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: "
            android:id="@+id/edit_value_total_label"
            android:textSize="14dp"
            android:layout_marginRight="15dp"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,000"
            android:id="@+id/edit_value_total_value"
            android:textStyle="bold"
            android:textSize="14dp"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:singleLine="true"
            android:gravity="right"
            android:minWidth="65dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#101010"
        android:layout_marginTop="5dp"
        android:id="@+id/edit_value_progress_container" />

    <EditText
        android:id="@+id/edit_value_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="10dp"
        android:hint=""
        android:inputType="numberSigned"
        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:numeric="integer"
        android:singleLine="true"/>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expedite Training"
        android:id="@+id/edit_value_expedite"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Training"
            android:id="@+id/edit_value_positive_negative_label"
            android:minWidth="75dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/edit_value_action_amount"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Troops"
            android:id="@+id/edit_value_type_label"
            android:layout_marginLeft="3dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(0 gc)"
            android:id="@+id/edit_value_cost"
            android:textColor="#CC3030"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Ready in 8 hours)"
        android:id="@+id/edit_value_time"
        android:textStyle="italic"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="2dp"/>

</LinearLayout>