<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="My Kingdom:"
        android:id="@+id/kingdom_province_kingdom"
        android:gravity="right"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textSize="12sp"
        android:background="#000000"/>

    <include layout="@layout/kingdom_navigation" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:text="KINGDOM NAME"
        android:id="@+id/kingdom_name"
        android:maxLines="1"
        android:minLines="1"
        android:lines="1"
        android:textColor="#DDDDDD"
        android:textStyle="bold"
        android:gravity="center_vertical|center_horizontal"
        android:background="#90000000"
        android:textSize="20sp"
        android:textIsSelectable="false"
        android:singleLine="true"
        android:shadowColor="#000000"
        android:layout_margin="0dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.50"
            android:text="STANCE"
            android:id="@+id/kingdom_stance"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:textColor="#DDDDDD"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal"
            android:background="#90000000"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:singleLine="true"
            android:shadowColor="#000000"
            android:layout_margin="0dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.50"
            android:text="000,000,000 NW"
            android:id="@+id/kingdom_networth"
            android:maxLines="1"
            android:minLines="1"
            android:lines="1"
            android:textColor="#DDDDDD"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal"
            android:background="#90000000"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:singleLine="true"
            android:shadowColor="#000000"
            android:layout_margin="0dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:text="At War"
        android:id="@+id/kingdom_war_banner"
        android:maxLines="1"
        android:minLines="1"
        android:lines="1"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center_vertical|center_horizontal"
        android:background="#90FF0000"
        android:textSize="20sp"
        android:textIsSelectable="false"
        android:singleLine="true"
        android:shadowColor="#000000"
        android:layout_margin="0dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/kingdom_listview"
        android:layout_gravity="center_horizontal"
        android:focusableInTouchMode="true">
    </ListView>

</LinearLayout>