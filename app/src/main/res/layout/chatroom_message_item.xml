<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:id="@+id/chatroom_message_boundary_view"
        android:background="#000000" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="DISPLAY NAME"
            android:id="@+id/chatroom_message_item_display_name"
            android:layout_weight="0.5"
            android:gravity="center_vertical|left"
            android:lines="1"
            android:minLines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="2015-01-01 00:00:00"
            android:id="@+id/chatroom_message_item_timestamp"
            android:layout_weight="0.5"
            android:gravity="center_vertical|right"
            android:textStyle="italic"
            android:layout_marginRight="5dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Message body."
        android:id="@+id/chatroom_message_item_body"
        android:layout_margin="5dp"
        android:textSize="16sp"/>
</LinearLayout>