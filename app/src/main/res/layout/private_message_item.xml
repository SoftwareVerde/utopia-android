<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="76dp" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7e4711" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#202020" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/private_message_item_title"
                android:text="Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FEDCBA"
                android:layout_marginLeft="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/private_message_item_sender_name"
                android:text="Sender Name"
                android:layout_marginLeft="10dp"
                android:textStyle="italic"
                android:textSize="14dp"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/private_message_item_date"
            android:text="0PM\n2015-01-01"
            android:gravity="center|center_vertical"
            android:textColor="#D0D0D0"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/private_message_gradient" />
</LinearLayout>